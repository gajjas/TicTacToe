<% include ./partials/header %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/stylesheets/game.css">

<% include ./partials/nav %>

<div class="container-fluid row wrap">
    <div class="container col-9 justify-content-center list-container">
        <h1>Game</h1>
        <hr>
        <div class="container row grid">

            <% for(var x = 0; x < 9; x++) { %>
                
                <div class="d-flex justify-content-center container col-4 <%- x %> grid-square">
                    <!-- <% if(x==4) {%> 
                    <img src="/images/X.png">
                    <% } %>  -->
                </div>

            <% } %>

        </div>  
        <div class="d-flex justify-content-around controls"> 
            <button type="button" class="btn btn-success">
                <i class="fa fa-arrow-left"></i>
                Prev
            </button>
            <button type="button" class="btn btn-success">
                Next
                <i class="fa fa-arrow-right"></i>
            </button>
        </div>  
    </div>
</div>


<% include ./partials/footer %>